    "@rsbuild/plugin-react": "^0.3.11",
    "@testing-library/jest-dom": "^6.4.1",
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/bun": "^1.0.4",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "oxlint": "^0.2.6",
    "typescript": "^5.3.3"
  }
