{
  "$schema": "https://biomejs.dev/schemas/1.4.1/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    },
    "ignore": ["node_modules"]
  },
  "javascript": {
    "formatter": {
      "semicolons": "asNeeded"
    }
  },
  "formatter": {
    "ignore": ["node_modules"],
    "lineWidth": 120
  }
}
