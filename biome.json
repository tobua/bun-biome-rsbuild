{
	"$schema": "https://biomejs.dev/schemas/1.4.1/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"all": true,
			"suspicious": {
				"all": true,
				"noConsoleLog": "error"
			},
			"style": {
				"all": true,
				"noDefaultExport": "off"
			}
		},
		"ignore": ["node_modules", "dist"]
	},
	"javascript": {
		"formatter": {
			"semicolons": "asNeeded",
			"quoteStyle": "single",
			"indentStyle": "space"
		}
	},
	"formatter": {
		"ignore": ["node_modules", "dist"],
		"lineWidth": 120
	}
}
